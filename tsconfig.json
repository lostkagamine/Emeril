{
    "globals": {
        "_config": false,
        "console": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": ["./src/@types"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
    ]
}